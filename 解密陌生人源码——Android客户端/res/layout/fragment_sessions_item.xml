<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9d6a3" >

    <FrameLayout
        android:id="@+id/fragment_sessions_item_avatar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >

        <com.silence.im.ui.view.RoundedImageView
            android:id="@+id/fragment_sessions_item_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher"
            app:border_color="#96C7DA"
            app:border_width="1dp"
            app:corner_radius="90dp"
            app:oval="false" />

        <TextView
            android:id="@+id/fragment_sessions_item_count"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="60dp"
            android:background="#e60012"
            android:gravity="center"
            android:text="10"
            android:textColor="@android:color/white" />
    </FrameLayout>

    <TextView
        android:id="@+id/fragment_sessions_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fragment_sessions_item_avatar_layout"
        android:layout_alignLeft="@+id/fragment_sessions_item_name"
        android:layout_alignStart="@+id/fragment_sessions_item_name"
        android:maxLines="1"
        android:singleLine="true"
        android:text="我在忙，等一会"
        android:textColor="#6f6f6f"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/fragment_sessions_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/fragment_sessions_item_avatar_layout"
        android:linksClickable="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textColorLink="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fragment_sessions_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/fragment_sessions_item_name"
        android:layout_marginRight="10dp"
        android:maxLines="1"
        android:singleLine="true"
        android:text="15:38"
        android:textColor="#706f6f"
        android:textSize="16sp" />

</RelativeLayout>