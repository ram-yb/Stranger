<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jersuen.im.ui.SignActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="请点击头像"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#98b692"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/activity_sign_view_upload_avatar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp" >

        <com.silence.im.ui.view.RoundedImageView
            android:id="@+id/activity_sign_view_upload_avatar_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/myphoto"
            app:border_color="#98b692"
            app:border_width="3dp"
            app:corner_radius="90dp"
            app:oval="false" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3" />

        <Button
            android:id="@+id/activity_sign_view_upload_avatar_commit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/loginbutton"
            android:text="完  成"
            android:textColor="#ffffff"
            android:textSize="23dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3" />
    </LinearLayout>

</LinearLayout>