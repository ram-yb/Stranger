<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|left"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#e6f4c1" >

        <TextView
            android:id="@+id/fragment_contacts_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#e6f4c1"
            android:gravity="center|left"
            android:layout_marginLeft="13dp"
            android:minHeight="40dp"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_contacts_list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d9d6a3"
        android:gravity="center_vertical"
        android:minHeight="60dp"
        android:orientation="horizontal" >

        <com.silence.im.ui.view.RoundedImageView
            android:id="@+id/fragment_contacts_list_item_avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher"
            app:border_color="#96C7DA"
            app:border_width="1dp"
            app:corner_radius="90dp"
            app:oval="false" />

        <TextView
            android:id="@+id/fragment_contacts_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>